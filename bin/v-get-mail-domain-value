#!/bin/bash
# info: get mail domain value
# options: USER DOMAIN KEY
#
# example: v-get-mail-domain-value admin example.com DKIM
#
# This function for getting a certain mail domain parameter.

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Argument definition
user=$1
domain=$2
domain_idn=$2
key=$3

# Includes
# shellcheck source=/etc/davidcp/david.conf
source /etc/davidcp/david.conf
# shellcheck source=/usr/local/david/func/main.sh
source $HESTIA/func/main.sh
# load config file
source_conf "$HESTIA/conf/david.conf"

# Additional argument formatting
format_domain
format_domain_idn
# TODO: $domain_idn not used in this script - maybe $domain should be converted to $doman_idn ?

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '3' "$#" 'USER DOMAIN KEY'
is_format_valid 'user' 'domain' 'key'
is_object_valid 'user' 'USER' "$user"
is_object_valid 'mail' 'DOMAIN' "$domain"

key=$(echo "$key" | tr '[:lower:]' '[:upper:]' | sed "s/^/$/")

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Print
get_object_value 'mail' 'DOMAIN' "$domain" "$key"

#----------------------------------------------------------#
#                       David                             #
#----------------------------------------------------------#

# Logging
log_event "$OK" "$ARGUMENTS"

exit
